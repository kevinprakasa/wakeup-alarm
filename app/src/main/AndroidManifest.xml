<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ui.cs.mobileprogramming.kevinprakasa.wakeup">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="id.ac.ui.cs.mobileprogramming.kevinprakasa.wakeup.AlarmHistoryActivity"></activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.kevinprakasa.wakeup.CreateAlarmActivity" />
        <activity android:name="id.ac.ui.cs.mobileprogramming.kevinprakasa.wakeup.AlarmReceiverActivity"/>

        <service
            android:name="id.ac.ui.cs.mobileprogramming.kevinprakasa.wakeup.AlarmService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="id.ac.ui.cs.mobileprogramming.kevinprakasa.wakeup.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="id.ac.ui.cs.mobileprogramming.kevinprakasa.wakeup.AlarmReceiver" />
        <provider android:name="id.ac.ui.cs.mobileprogramming.kevinprakasa.wakeup.ContentProvider.AlarmContentProvider"
            android:authorities="id.ac.ui.cs.mobileprogramming.kevinprakasa.wakeup.ContentProvider.AlarmContentProvider"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>